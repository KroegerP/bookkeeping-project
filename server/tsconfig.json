{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "esnext",
    "types": ["node"],
    "module": "CommonJS",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/express/index.d.ts", "node_modules/@types"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules/**/*"]
}
