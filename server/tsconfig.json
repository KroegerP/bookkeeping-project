{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "esnext",
    "types": ["node"],
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules/**/*"]
}
