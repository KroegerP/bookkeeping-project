datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String     @default("")
  email     String     @unique @default("")
  password  String
  purchases Purchase[] @relation("Purchase_createdBy")
  createdAt DateTime?  @default(now())
}

model Purchase {
  id          Int       @id @default(autoincrement())
  date        DateTime  @default("2023-12-30T18:05:29.700Z")
  description String    @default("")
  cost        Float
  total       Float
  category    Category? @relation("Purchase_category", fields: [categoryId], references: [id])
  categoryId  Int?      @map("category")
  card        Card?     @relation("Purchase_card", fields: [cardId], references: [id])
  cardId      Int?      @map("card")
  createdBy   User?     @relation("Purchase_createdBy", fields: [createdById], references: [id])
  createdById Int?      @map("createdBy")
  createdAt   DateTime? @default(now())

  @@index([categoryId])
  @@index([cardId])
  @@index([createdById])
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String     @unique @default("")
  purchases Purchase[] @relation("Purchase_category")
}

model Card {
  id         Int        @id @default(autoincrement())
  name       String     @unique @default("")
  bank       String     @default("")
  lastFour   String     @unique @default("")
  creditCard Boolean    @default(false)
  notes      String     @default("")
  purchases  Purchase[] @relation("Purchase_card")
  expiresAt  DateTime?  @default(now())
  createdAt  DateTime?  @default(now())
}
